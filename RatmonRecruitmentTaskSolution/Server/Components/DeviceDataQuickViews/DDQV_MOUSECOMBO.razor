@using Server.Components.Shared
@using Server.Data.Models
@using global::Shared

<RadzenColumn class="rz-p-5" Size="12" SizeLG="6">
    <RadzenCard Style="max-height: 450px; ">
        @if (DeviceData.Count == 0)
        {
            <RadzenSkeleton Animation="SkeletonAnimation.Wave" />
        }
        else
        {
            <ParameterGraph Device=@Device DataParameterName="Voltage" Label="V" ValueFormat="ValueFormat.Normal" Latest=@Latest DisableAutoUpdate=@DisableAutoUpdate />
        }
    </RadzenCard>
</RadzenColumn>
<RadzenColumn class="rz-p-5" Size="12" SizeLG="6">
    <RadzenCard Style="max-height: 450px; ">
        @if (DeviceData.Count == 0)
        {
            <RadzenSkeleton Animation="SkeletonAnimation.Wave" />
        }
        else
        {
            <ParameterGraph Device=@Device DataParameterName="Resistance" Label="Ω" ValueFormat="ValueFormat.Normal" Latest=@Latest DisableAutoUpdate=@DisableAutoUpdate />
        }
    </RadzenCard>
</RadzenColumn>

<RadzenColumn class="rz-p-5" Size="12" SizeLG="12">
    <RadzenCard Style="max-height: 450px; ">
        <RadzenText TextStyle="TextStyle.DisplayH5">
            <ReflectogramGraph Device=@Device Number=0/>

        </RadzenText>
    </RadzenCard>
</RadzenColumn>
@code {
    [Parameter]
    public Device Device { get; set; }
    [Parameter]
    public List<DeviceData> DeviceData { get; set; }
    [Parameter]
    public int Latest { get; set; } = 10;
    [Parameter]
    public bool DisableAutoUpdate { get; set; } = false;
}
