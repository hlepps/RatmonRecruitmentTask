@using Server.Components.Shared
@using Server.Data.Models

<RadzenColumn class="rz-p-5" Size="12" SizeLG="6">
    <RadzenCard Style="max-height: 450px; ">
        @if (DeviceData.Count == 0)
        {
            <RadzenSkeleton Animation="SkeletonAnimation.Wave" />
        }
        else
        {
            <ParameterGraph Device=@Device DataParameterName="Temperature" Label="V" ValueFormat="ValueFormat.Temperature" Latest=@Latest DisableAutoUpdate=@DisableAutoUpdate />
        }
    </RadzenCard>
</RadzenColumn>
<RadzenColumn class="rz-p-5" Size="12" SizeLG="6">
    <RadzenCard Style="max-height: 450px; ">
        @if (DeviceData.Count == 0)
        {
            <RadzenSkeleton Animation="SkeletonAnimation.Wave" />
        }
        else
        {
            <ParameterGraph Device=@Device DataParameterName="Humidity" Label="Ω" ValueFormat="ValueFormat.Percent" Latest=@Latest DisableAutoUpdate=@DisableAutoUpdate />
        }
    </RadzenCard>
</RadzenColumn>
@code {
    [Parameter]
    public Device Device { get; set; }
    [Parameter]
    public List<DeviceData> DeviceData { get; set; }
    [Parameter]
    public int Latest { get; set; } = 10;
    [Parameter]
    public bool DisableAutoUpdate { get; set; } = false;
}
