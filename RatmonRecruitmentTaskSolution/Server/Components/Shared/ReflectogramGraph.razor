@rendermode InteractiveServer
@using Server.Services
@using Data.Models
@using global::Shared

@inject DeviceDataService DeviceDataService
@inject DeviceService DeviceService
@inject NavigationManager NavigationManager

<RadzenRow class="rz-p-0 rz-p-md-6 rz-p-lg-12" JustifyContent="JustifyContent.Center">
    <RadzenText TextStyle="TextStyle.H5">Reflectogram</RadzenText>
    <RadzenChart Style="width:100%">
        <RadzenChartTooltipOptions />
        <RadzenLineSeries Smooth=true Data="@graphData" CategoryProperty="XValue" ValueProperty="YValue" Title="Reflectogram">
            <RadzenMarkers Visible=false />
            <RadzenSeriesDataLabels Visible=false />
        </RadzenLineSeries>
        <RadzenCategoryAxis Visible=true Formatter="@FormatValue">
            <RadzenAxisTitle Text="ns" />
        </RadzenCategoryAxis>
        <RadzenValueAxis Visible=true Formatter="@FormatValue">
            <RadzenGridLines Visible="true" />
            <RadzenAxisTitle Text="V" />
        </RadzenValueAxis>
        <RadzenLegend Visible="false" />
    </RadzenChart>
</RadzenRow>